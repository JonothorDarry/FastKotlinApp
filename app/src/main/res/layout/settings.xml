<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/Hemispheres"
        android:layout_width="175dp"
        android:layout_height="103dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Algorithm">

        <RadioButton
            android:id="@+id/NorthHemi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Półkula Północna" />

        <RadioButton
            android:id="@+id/SouthHemi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Półkula Południowa" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/Algorithm"
        android:layout_width="175dp"
        android:layout_height="138dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="104dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/SimpleAlgo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prosty Algorytm" />

        <RadioButton
            android:id="@+id/ConwayAlgo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Algorytm Conwaya" />

        <RadioButton
            android:id="@+id/Trig1Algo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Algorytm Trygonometryczny 1" />

        <RadioButton
            android:id="@+id/Trig2Algo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Algorytm Trygonometryczny 2" />
    </RadioGroup>

    <Button
        android:id="@+id/acceptSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:text="Zaakcepuj wybory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/returning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:text="Wróc bez zapisywania"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="125dp"
        android:layout_height="27dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="26dp"
        android:text="Wybrany Algorytm:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="125dp"
        android:layout_height="27dp"
        android:layout_marginStart="143dp"
        android:layout_marginBottom="48dp"
        android:text="Wybrana Półkula:"
        app:layout_constraintBottom_toTopOf="@+id/Hemispheres"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>